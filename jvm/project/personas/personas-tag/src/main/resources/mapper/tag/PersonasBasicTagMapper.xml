    </update>

    <delete id="deletePersonasBasicTagById" parameterType="Long">
        delete from personas_basic_tag where tag_id = #{tagId}
    </delete>

    <delete id="deletePersonasBasicTagByIds" parameterType="String">
        delete from personas_basic_tag where tag_id in 
        <foreach item="tagId" collection="array" open="(" separator="," close=")">
            #{tagId}
        </foreach>
    </delete>
